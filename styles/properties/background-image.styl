@require ../atrules/media;
@require ../functions/assets;

background-image() {
  background-image: arguments;
  if has-src2x() {
    args = ();
    for argv in arguments {
      if type(argv) == call {
        argv = --shift-src2x();
      }
      push(args, argv);
    }
    --reset-src2x();
    +highres(--get-src2x-query()) {
      background-image: unquote(join(', ', args));
    }
  }
}
